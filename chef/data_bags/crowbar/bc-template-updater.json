{
  "id": "bc-template-updater",
  "description": "System package updater",
  "attributes": {
    "updater": {
      "do_reboot": false,
      "zypper": {
        "method": "patch",
        "gpg_checks": true,
        "licenses_agree": false,
        "patch": {
          "include_reboot_patches": false
        }
      },
      "one_shot_run": false
    }
  },
  "deployment": {
    "updater": {
      "crowbar-revision": 0,
      "elements": {},
      "element_states": {
        "updater": [ "readying", "ready", "applying" ]
      },
      "element_order": [
        [ "updater" ]
      ],
      "config": {
        "environment": "updater-config-base",
        "mode": "full",
        "transitions": false,
        "transition_list": []
      }
    }
  }
}

