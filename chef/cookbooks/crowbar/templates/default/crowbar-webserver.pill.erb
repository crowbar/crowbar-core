Bluepill.application("crowbar-webserver") do |app|
  app.process("crowbar-webserver") do |p|
    p.name = "puma"
    p.start_command = "/usr/bin/env HOME=<%= @crowbar_home %> puma -C /opt/dell/crowbar_framework/config/puma.rb"
    p.stdout = p.stderr = "<%= "#{@logdir}/production.out" %>"
    p.working_dir = "/opt/dell/crowbar_framework"
    p.uid = "crowbar"
    p.gid = "crowbar"
    p.daemonize = true
  end
end
