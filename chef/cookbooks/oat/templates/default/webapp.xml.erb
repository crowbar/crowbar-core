<Context path="/<%= @resource_name %>" docBase="<%= @webapp_path%>/<%= @resource_name %>"
   debug="0" privileged="true" allowLinking="true" crossContext="true">
  <!-- make symlinks work in Tomcat -->
  <Resources className="org.apache.naming.resources.FileDirContext" allowLinking="true" />
  <Resource name="jdbc/oat" auth="Container" type="javax.sql.DataSource"
            username="<%= @db_user %>" password="<%= @db_pass %>" driverClassName="com.mysql.jdbc.Driver"
            url="jdbc:mysql://<%= @mysql_host %>:3306/<%= @db_name %>"/>
</Context>
