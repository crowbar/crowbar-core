<VirtualHost *:<%= node[:inteltxt][:apache_listen_port] %>>
    DocumentRoot <%= @oat_dir %>

    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>

    <Directory <%= @oat_dir %>/>
        Options FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>

    ErrorLog /var/log/apache2/oat_error.log
    LogLevel warn
    CustomLog /var/log/apache2/oat_access.log combined
</VirtualHost>
