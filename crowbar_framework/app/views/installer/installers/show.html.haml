- content_for :stylesheets do
  = stylesheet_link_tag "installer"

- content_for :javascripts do
  = javascript_include_tag "installer"

.col-lg-6.col-md-6.col-sm-6.col-xs-12
  .panel.panel-default
    .panel-heading
      %h2
        = t(".installation_header", product: branding_config.page_title)
    %ul.list-group.action
      - @steps.each do |step|
        %li.list-group-item{ class: step }
          = icon_tag(:hourglass_o)
          = t(".#{step}")
    .panel-footer.text-right
      .btn-group
        = button_to t(".install_button"), start_installer_path, class: "btn btn-success", method: :post
.col-lg-5.lg-offset-1.col-md-5.col-md-offset-1.col-sm-6.col-xs-12
  %h1
    = t(".documentation")
  %ul.list-unstyled
    %li
      = link_to t(".documentation_resources"), docs_path
      %small
        %i.fa.fa-external-link
