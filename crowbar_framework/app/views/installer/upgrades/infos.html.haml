.row
  .col-lg-12
    = form_tag infos_upgrade_path, method: "post" do
      .panel.panel-default
        .panel-heading
          %h2
            = t("installer.upgrades.header", product: branding_config.page_title)

        .panel-plain.wizard
          = render partial: "nav", locals: { active: :infos }

          .wizard-body.col-lg-9
            %h2
              = t(".header")

            %p
              = t(".description")

        .panel-footer
          .row
            .col-lg-3
              = progress_steps @current_step, @min_step, @max_step

            .col-lg-9.text-right
              .btn-group{ role: "group" }
                = upgrade_continue_button
