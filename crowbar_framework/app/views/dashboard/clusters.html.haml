.row{ "data-ledupdate" => status_nodes_path, "data-ledignore" => "groups, proposals", "data-ledreload" => "false" }
  .col-xs-12
    %h1.page-header
      = t(".title")

      .badge{ :title => t(".extended_clusters", :count => @clusters.count) }
        = t(".simple_clusters", :count => @clusters.count)

.row
  .col-xs-12
    - @clusters.sort_by { |element, cluster| element }.each do |element, cluster|
      .row
        .col-xs-12
          = render :partial => "cluster", :locals => { :element => element, :cluster => cluster, :cluster_roles => cluster.cluster_roles(@roles), :cluster_remote_roles => cluster.cluster_remote_roles(@roles), :cluster_nodes => cluster.cluster_nodes(@nodes), :cluster_remote_nodes => cluster.cluster_remote_nodes(@nodes), :all_proposals => @proposals }
